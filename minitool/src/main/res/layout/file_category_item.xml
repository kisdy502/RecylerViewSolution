<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/common_itembg_selector"
    android:clickable="true"
    android:focusable="true"
    android:layout_margin="@dimen/w8"
    android:focusableInTouchMode="true">

    <ImageView
        android:id="@+id/categoty_icon"
        android:layout_width="@dimen/w49"
        android:layout_height="@dimen/h47"
        android:layout_centerInParent="true"
        android:background="@drawable/file_icon_default" />

    <TextView
        android:id="@+id/category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Music"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/h8"
        android:layout_below="@id/categoty_icon"
        android:textColor="@android:color/white"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/category_count"
        android:layout_marginTop="@dimen/h8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/category_name"
        android:textColor="@android:color/white"
        android:text="(19)"
        android:textSize="18sp" />

</RelativeLayout>
