<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/h120"
    android:background="@drawable/common_itembg_selector"
    android:clickable="true"
    android:focusable="true"
    android:layout_margin="@dimen/w2"
    android:focusableInTouchMode="true">

    <ImageView
        android:id="@+id/file_type"
        android:layout_width="@dimen/w72"
        android:layout_height="@dimen/h72"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/h24"
        android:background="@drawable/folder" />

    <TextView
        android:id="@+id/file_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/w24"
        android:layout_marginTop="@dimen/h8"
        android:layout_toEndOf="@+id/file_type"
        android:layout_toRightOf="@+id/file_type"
        android:text="fileName"
        android:textColor="@android:color/white"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/file_info"
        android:layout_marginTop="@dimen/h12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/file_name"
        android:layout_alignStart="@+id/file_name"
        android:layout_below="@+id/file_name"
        android:textColor="@android:color/white"
        android:text="共4个文件夹，3个文件"
        android:textSize="18sp" />

</RelativeLayout>
